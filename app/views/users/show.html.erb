<div class="booyah-box">
  <div class="col-xs-4"> 
    <%= image_tag 'cross.png' %>
  </div>

  <div class="col-xs-8">
    <h1><%= @user.email %></h1>
    <h3>Member since: <%= @user.created_at.strftime("%B %d, %Y") %></h3>
    <h4><%= @user.comments.count %> total comments</h4>
    <% grammar_count = @user.comments.where(rating: '5_stars').count %>
    <%if grammar_count > 1 %>
      <h4><%= grammar_count %> total 5 star reviews</h4>
    <% else %>
      <h4><%= grammar_count %> total 5 star review</h4>
    <% end %>
  </div>
  <div class="clear"></div>

</div>