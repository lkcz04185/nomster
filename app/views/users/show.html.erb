<div class="booyah-box">
  <div class="col-xs-4"> 
    <%= image_tag 'cross.png' %>
  </div>

  <div class="col-xs-8">
    <h1><%= @user.email %></h1>
    <h3>Member since: <%= @user.created_at.strftime("%B %d, %Y") %></h3>
    <% grammar_count = @user.comments.count %>
    <%if grammar_count > 1 %>
    <h4><b><%= @user.comments.count %></b> total comments</h4>
    <% else %>
      <h4><b><%= grammar_count %></b> comment</h4>
    <% end %>
    <% grammar_count = @user.comments.where(rating: '5_stars').count %>
    <%if grammar_count > 1 %>
      <h4><b><%= grammar_count %></b> total 5-star reviews</h4>
    <% else %>
      <h4><b><%= grammar_count %></b> 5-star review</h4>
    <% end %>
  </div>
  <div class="clear"></div>
  <br />

</div>

<div class="clear"></div>

<h1 class="text-center">My comments</h1>
<br />
<% @user.comments.each do |comment| %>
  <div class="col-xs-12 col-sm-6 ">
  <h2><%= link_to comment.place.name, place_path(comment.place) %></h2>  
    <blockquote>
      <% if comment.humanized_rating.present? %>
        <b><%= comment.humanized_rating %></b> -
      <% end %>
      <%= comment.message %>
      <small><%= comment.user.email %></small>
    </blockquote>
  </div>
<% end %>

<div class="clear"></div>
<br />

<h2 class="text-center">My Places</h2>
<br />
<% @user.places.each do |place| %>
  
  <div class="booyah-box col-xs-10 col-xs-offset-1">
 
    <h1><%= link_to place.name, place_path(place) %></h1>
    <i><%= place.address %></i><br/>
    <p><%= place.description %></p>

    <% if place.user.present? %>
      <small> <%= place.user.email %></small>
      <% end %>
  
    <% if place.comments.present? %>
      <div class="col-xs-12">
        <blockquote>
          <% if place.comments.last.humanized_rating.present? %>
          <b><%= place.comments.last.humanized_rating %></b> -
          <% end %>
          <%= place.comments.last.message %>
          <small> <%= place.comments.last.user.email %></small>
        </blockquote>
      </div>
    <% end %>
  </div>
  <% end %>




